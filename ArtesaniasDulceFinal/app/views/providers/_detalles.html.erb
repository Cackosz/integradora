<section style="margin-right: 15px; margin-left: 15px;">
  <section style="background-color: #2d92ff; width: 700px;">
  </section>
  <%= form_tag destroy_multiple_providers_path, method: :delete do %>
      <%= button_tag(type: "submit", class: "button alert small", style: "float:right") do %>
          <i class="fi-trash"></i>
      <% end %>
      <table id="table" class="display nowrap" cellspacing="0">
        <thead>
        <tr>
          <th class="checkEliminar">Eliminar</th>
          <th>Nombre del Proveedor</th>
          <th>Opciones</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th class="checkEliminar">Eliminar</th>
          <th>Nombre del Proveedor</th>
          <th>Opciones</th>
        </tr>
        </tfoot>
        <tbody>
        <% @providers.each do |provider| %>
            <tr class="">
              <td style="text-align: center;"> <%= check_box_tag "provider_ids[]", provider.id %></td>
              <td><%= provider.name_pro %>  <%= provider.first_name %> <%= provider.last_name %></td>
              <td>
                <%= link_to_modal 'Editar', edit_provider_path(provider) %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <br/>
      <br/>
  <% end %>
</section>