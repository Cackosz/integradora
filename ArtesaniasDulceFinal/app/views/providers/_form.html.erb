<center>
  <section id="form" style="width: 700px" class="">
    <%= form_for @provider do |f| %>
        <div class="row">
          <div class="large-4 columns">
            <label>Nombre Proveedor
              <%= f.text_field :name_pro, :id => 'text' %>
            </label>
          </div>
          <div class="large-4 columns">
            <label>Apellido Paterno
              <%= f.text_field :first_name, :id => "text1" %>
            </label>
          </div>
          <div class="large-4 columns">
            <label>Apellido Materno
              <%= f.text_field :last_name, :id => "text2" %>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-6 columns">
            <label>Empresa o Compa√±ia del Proveedor
              <%= f.text_field :name_enterprise, :id => "text3" %>
            </label>
          </div>
          <div class="large-6 columns">
              <label>Ciudad del Proveedor
                <%= f.text_field :location, :id => "text5" %>
                <%= f.submit :class => "button expand", :onclick=>'return validarProvider()' %>
              </label>
            </div>
          </div>
        </div>
    <% end %>
  </section>

</center>
