<p id="notice"><%= notice %></p>
<section style="">
<table id="table" class="display nowrap" cellspacing="0">
  <thead>
  <tr>
    <th>Pieza</th>
    <th>Cantidad de Pieza</th>
    <th>Total</th>
  </tr>
  </thead>
  <tfoot>
  <tr>
    <th>Pieza</th>
    <th>Cantidad de Pieza</th>
    <th>Total</th>
  </tr>
  </tfoot>
  <tbody>
  <% @sales.each do |sale| %>
      <tr>
        <% @pieces.each do |pieces| %>
            <% if (sale.piece_id.equal? pieces.id) %>
                <td><%= pieces.piece_name %></td>
            <%end%>
        <%end%>
        <td><%= sale.sale_quantity %></td>
        <td><%= sale.total %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</section>
