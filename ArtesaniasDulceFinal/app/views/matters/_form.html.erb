<center>
  <section id="form" style="width: 700px" class="">
    <%= form_for(@matter) do |f| %>
        <div class="row">
          <div class="large-12 columns">
            <label>Nombre de la Materia
              <%= f.text_field :name_matter, :id => "matter" %>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="large-4 columns">
            <label>Precio
              <%= f.text_field :price, :onKeyPress => ("return soloNum(event)"), :id => "priceMatter" %>

            </label>
          </div>
          <div class="large-4 columns">
            <label>Cantidad
              <%= f.number_field :quantity, :id => "qtyMatter" %>
            </label>
          </div>
          <div class="large-4 columns">
            <label>Proveedor
              <%= f.collection_select(:provider_id, Provider.all, :id , :name_pro) %>
            </label>
          </div>
        </div>
        <%= f.submit :class => "button expand", :onclick=>'return validarMatter()' %>
    <% end %>
  </section>
</center>
