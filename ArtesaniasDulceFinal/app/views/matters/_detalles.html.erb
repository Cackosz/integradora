<section style="margin-right: 15px; margin-left: 15px;">
    <%= form_tag destroy_multiple_matters_path, method: :delete do %>
    <%= button_tag(type: "submit", class: "button alert small", style: "float:right") do %>
    <i class="fi-trash"></i>
    <% end %>
    <table id="table" class="display nowrap" cellspacing="0">
        <thead>
        <tr>
            <th class="checkEliminar">Eliminar</th>
            <th>Materia Prima</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Opciones</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th class="checkEliminar">Eliminar</th>
            <th>Materia Prima</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Opciones</th>
        </tr>
        </tfoot>
        <tbody>
        <% @matter.each do |matter| %>
        <tr class="">
            <td style="text-align: center;"> <%= check_box_tag "matter_ids[]", matter.id %></td>
            <td><%= matter.name_matter %></td>
            <td><%= matter.price %></td>
            <td><%= matter.quantity %></td>
            <td>
                <%= link_to_modal 'Editar', edit_matter_path(matter) %>
            </td>
        </tr>
        <% end %>
        </tbody>
    </table>
    <% end %>
</section>
