<p id="notice"><%= notice %></p>

<section style="">
  <%= form_tag destroy_multiple_pieces_path, method: :delete do %>
      <%= button_tag(type: "submit", class: "button alert small", style: "float:right") do %>
          <i class="fi-trash"></i>
      <% end %>
      <table id="table" class="display nowrap" cellspacing="0">
        <thead>
        <tr>
          <th class="checkEliminar">Eliminar</th>
          <th>Pieza</th>
          <th>Categoria</th>
          <th>Opciones</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th class="checkEliminar">Eliminar</th>
          <th>Pieza</th>
          <th>Categoria</th>
          <th>Opciones</th>
        </tr>
        </tfoot>
        <tbody>
        <% @pieces.each do |piece| %>
            <tr>
              <td style="text-align: center;"> <%= check_box_tag "pieces_ids[]", piece.id %></td>
              <td><%= piece.piece_name %></td>
              <% @categories.each do |categories| %>
                  <% if (piece.category_id.equal? categories.id) %>
                      <td><%= categories.type_category %></td>
                  <% end %>
              <% end %>
              <td>
                <%= link_to_modal 'Editar', edit_piece_path(piece) %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>
</section>

