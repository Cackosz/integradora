<p id="notice"><%= notice %></p>

<h1>Listing Pieces</h1>

<table>
  <thead>
  <tr>
    <th>Piece name</th>
    <th>Piece quantity</th>
    <th>Price</th>
    <th>Matter name</th>
    <th>Category</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.piece_name %></td>
        <td><%= piece.piece_quantity %></td>
        <td><%= piece.price %></td>
        <td><%= piece.matter_name %></td>
        <% @categories.each do |categories| %>
            <% if (piece.category_id.equal? categories.id) %>
                <td><%= categories.type_category %></td>
            <%end%>
        <%end%>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

