<p id="notice"><%= notice %></p>

<h1>Listing Matters</h1>
<%= form_tag destroy_multiple_matters_path, method: :delete do %>
<table>
  <thead>
  <tr>
    <th>Eliminar</th>
    <th>Name matter</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Total inversion</th>
    <th>Provider</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @matters.each do |matter| %>
      <tr>
        <td style="text-align: center;"> <%= check_box_tag "matter_ids[]", matter.id %></td>
        <td><%= matter.name_matter %></td>
        <td><%= matter.price %></td>
        <td><%= matter.quantity %></td>
        <td><%= matter.total_inversion %></td>
        <% @provider.each do |provider| %>
            <% if (matter.provider_id.equal? provider.id) %>
                <td><%= provider.name_pro%></td>
            <%end%>
        <%end%>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
      <%= submit_tag "Eliminar Seleccionados" %>
  <% end %>
<br>

<%= link_to 'New Matter', new_matter_path %>
