<p id="notice"><%= notice %></p>

<h1>Listing Providers</h1>
<%= form_tag destroy_multiple_providers_path, method: :delete do %>
<table>
  <thead>
    <tr>
      <th>Eliminar</th>
      <th>Name enterprise</th>
      <th>Name pro</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Matter</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td style="text-align: center;"> <%= check_box_tag "provider_ids[]", provider.id %></td>
        <td><%= provider.name_enterprise %></td>
        <td><%= provider.name_pro %></td>
        <td><%= provider.first_name %></td>
        <td><%= provider.last_name %></td>
        <td><%= provider.matter %></td>
        <td><%= provider.location %></td>
        <td><%= link_to 'Show', provider %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <%= submit_tag "Eliminar Seleccionados" %>
<% end %>
<br>

